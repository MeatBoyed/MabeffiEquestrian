---
import { getImage } from "astro:assets"
// import BannerImage from "../assets/Banner.jpg"
import { FaInstagram, FaWhatsapp, FaFacebook } from "react-icons/fa"
import { ChevronDown } from "lucide-react"
import { BannerImage, SocialMediaLinks } from "@/lib/ClientData"
const bannerImg = await getImage({ src: BannerImage, format: "avif" })
---

<section
  id="banner"
  class="mt-16 flex h-[70vh] w-full items-end justify-center bg-cover bg-top bg-no-repeat md:mt-20 xl:mt-16"
  style={{ backgroundImage: `url(${bannerImg.src})` }}
>
  <div
    class="flex h-full w-full flex-col items-center justify-end gap-2 bg-slate-950 bg-opacity-25 pb-3 text-primary-foreground"
  >
    <div
      class="flex animate-fade items-center justify-center gap-5 animate-duration-[2500ms] animate-fill-forwards animate-once"
    >
      <a href={SocialMediaLinks.Instagram}>
        <FaInstagram className="h-8 w-8 lg:h-10 lg:w-10" />
      </a>
      <a href={SocialMediaLinks.WhatsApp}>
        <FaWhatsapp className="h-8 w-8 lg:h-10 lg:w-10" />
      </a>
      <a href={SocialMediaLinks.Facebook}>
        <FaFacebook className="h-8 w-8 lg:h-10 lg:w-10" />
      </a>
    </div>
    <a
      href="#Intro"
      class="animate-fade animate-duration-[2500ms] animate-fill-forwards animate-once"
    >
      <ChevronDown
        size={30}
        className="animate-bounce animate-duration-[2000ms] animate-fill-forwards animate-infinite lg:h-10 lg:w-10 "
      />
    </a>
  </div>
</section>
