---
import { getImage } from "astro:assets"
import BannerImage from "../assets/Banner.jpg"
import { FaInstagram, FaWhatsapp, FaFacebook } from "react-icons/fa"
import { ChevronDown } from "lucide-react"
import { SocialMediaLinks } from "@/lib/ClientData"
const bannerImg = await getImage({ src: BannerImage })
---

<section
  id="banner"
  class="flex h-[70vh] w-full items-end justify-center bg-cover bg-center bg-no-repeat"
  style={{ backgroundImage: `url(${bannerImg.src})` }}
>
  <div
    class="flex h-full w-full flex-col items-center justify-end gap-2 bg-slate-950 bg-opacity-25 pb-3 text-primary-foreground"
  >
    <div class="flex items-center justify-center gap-5">
      <a href={SocialMediaLinks.Instagram}>
        <FaInstagram className="h-8 w-8 lg:h-10 lg:w-10" />
      </a>
      <a href={SocialMediaLinks.WhatsApp}>
        <FaWhatsapp className="h-8 w-8 lg:h-10 lg:w-10" />
      </a>
      <a href={SocialMediaLinks.Facebook}>
        <FaFacebook className="h-8 w-8 lg:h-10 lg:w-10" />
      </a>
    </div>
    <a href="#Intro">
      <ChevronDown size={30} className="lg:h-10 lg:w-10" />
    </a>
  </div>
</section>
